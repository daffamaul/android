<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_alarm"
        android:layout_width="136dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="300dp"
        android:background="@color/colorPrimary"
        android:text="Set"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/set_alarm_name"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:ems="5"
        android:hint="Nama Alarm, contoh: Alarm Subuh"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/button_alarm"
        app:layout_constraintEnd_toEndOf="@id/button_alarm"
        app:layout_constraintStart_toStartOf="@id/button_alarm"
        app:layout_constraintTop_toTopOf="@id/set_minute_alarm" />

    <EditText
        android:id="@+id/set_hour_alarm"
        android:layout_width="202dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:ems="5"
        android:hint="Jam, contoh: 1 (angka)"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/set_alarm_name"
        app:layout_constraintEnd_toEndOf="@id/button_alarm"
        app:layout_constraintStart_toStartOf="@id/button_alarm"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_minute_alarm"
        android:layout_width="201dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:ems="5"
        android:hint="Menit, contoh: 1 (angka)"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/set_alarm_name"
        app:layout_constraintEnd_toEndOf="@id/button_alarm"
        app:layout_constraintStart_toStartOf="@id/button_alarm"
        app:layout_constraintTop_toTopOf="@id/set_hour_alarm" />


</androidx.constraintlayout.widget.ConstraintLayout>